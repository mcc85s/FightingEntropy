                                    <DataGrid Name="Role_Info">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Name"  Binding="{Binding Name}" Width="150"/>
                                            <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </GroupBox>
                            </Grid>
                        </TabItem>
                        <TabItem Header="System">
                            <Grid Grid.Row="1" Name="System_Panel">
