                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="290"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Style="{StaticResource Config}"  Content="[FightingEntropy]://Server System Information"/>
