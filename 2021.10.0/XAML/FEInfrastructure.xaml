                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name"      Binding="{Binding Name}"  Width="150"/>
                                <DataGridTextColumn Header="Installed/Meets minimum requirements" Binding="{Binding Value}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                    <TabControl Grid.Row="1">
